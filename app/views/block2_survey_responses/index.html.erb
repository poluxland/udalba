<div class="container mt-4">
  <h2 class="mb-4">Todas las respuestas Claustro 2025</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Usuario</th>
        <th>Fecha</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @block2_survey_responses.each do |r| %>
        <tr>
          <td><%= r.id %></td>
          <td><%= r.user.email_address if r.user %></td>
          <td><%= r.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td><%= link_to 'Ver', block2_survey_response_path(r), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
