
<h1 class="mb-4">Listado de Usuarios</h1>
<div class="mb-3">
  <%= link_to "Respuestas Bloque 1", survey_responses_path, class: "btn btn-primary btn me-2" %>
  <%= link_to "Respuestas Bloque 2", block2_survey_responses_path, class: "btn btn-secondary btn" %>
</div>



<table class="table table-striped table-bordered table-hover table-sm align-middle">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>RUT</th>
      <th>Email</th>
      <th>F. Nacimiento</th>
      <th>Cargo</th>
      <th>Teléfono</th>
      <th>Mesa</th>
      <th>Sede</th>
      <th>Área</th>
      <th>Sup</th>
      <th>Admin</th>
      <th>Bloqueado</th>

    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.rut %></td>
        <td><%= user.email_address %></td>
        <td><%= user.birthdate&.strftime("%d-%m-%Y") %></td>
        <td><%= user.position %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.mesa %></td>
        <td><%= user.campus %></td>
        <td><%= user.area %></td>
        <td><%= user.supervisor ? "✅" : "❌" %></td>
<td><%= user.admin ? "✅" : "❌" %></td>
<td>
  <% if user.locked? %>
    <i class="bi bi-lock-fill text-danger"></i>
  <% else %>
    <i class="bi bi-unlock-fill text-success"></i>
  <% end %>
</td>



      </tr>
    <% end %>
  </tbody>
</table>
