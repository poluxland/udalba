<h1 class="mb-4">Listado de Usuarios</h1>

<table class="table table-striped table-bordered table-hover table-sm align-middle">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>RUT</th>
      <th>Email</th>
      <th>F. Nacimiento</th>
      <th>Cargo</th>
      <th>Teléfono</th>
      <th>Mesa</th>
      <th>Sede</th>
      <th>Área</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.rut %></td>
        <td><%= user.email_address %></td>
        <td><%= user.birthdate&.strftime("%d-%m-%Y") %></td>
        <td><%= user.position %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.mesa %></td>
        <td><%= user.campus %></td>
        <td><%= user.area %></td>
      </tr>
    <% end %>
  </tbody>
</table>
